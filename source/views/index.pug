//- extends layout to your side
extends layout/layout

block var
	- title = "Home page";
block content
	h1.sr-only Bone Yoyage - has a safe journey

	// Start hero-section
	section.hero-section
		#hero-slider.slider.slider--centerVert
			+fullwith-casousel("banner-01.jpg", "", "")
			+fullwith-casousel("banner-02.jpg", "", "").align-center
			+fullwith-casousel("banner-03.jpg", "", "").align-right
	// End hero-section 

	// Start intro-block
	section.block.block--bgImage.intro-block
		.container
			.row.search-travel
				.col-sm-12.col-md-3
					// Nav tabs
					ul.nav.nav-tabs(role="tablist")
						li.active(role="presentation")
							a(href="#find-hotel", aria-controls="find-hotel", role="tab", data-toggle="tab") <i class="icon-travel"></i> Find Hotel
						li(role="presentation")
							a(href="#find-flights", aria-controls="find-flights", role="tab", data-toggle="tab") <i class="icon-transport2"></i> Find Flights
						li(role="presentation")
							a(href="#find-flights-hotel", aria-controls="find-flights-hotel", role="tab", data-toggle="tab") <i class="icon-accomodation"></i> Find Flights + Hotel
						li(role="presentation")
							a(href="#find-cars", aria-controls="find-cars", role="tab", data-toggle="tab") <i class="icon-sports-car"></i> Find cars
						li(role="presentation")
							a(href="#find-cruises", aria-controls="find-cruises", role="tab", data-toggle="tab") <i class="icon-transport-1"></i> Find Cruises
				.col-sm-12.col-md-9
					// Tab panes
					.tab-content
						#find-hotel.tab-pane.active(role="tabpanel", style="background-image: url(images/bg-search-01.png)")
							h4.title-icon
								i.icon-transport2
								| Book a Flights
							form#booking-frm(action="#", method="post", enctype="multipart/form-data")
								mixin select(id, label, optionArr)
									label(for=id)= label 
									select(id= id)&attributes(attributes)
										each item in optionArr
											option(value="")= item
								.row
									.form-group.col-sm-12
										label(for="user-name") Destination
										input.form-control(type="text", placeholder="Your name:", id="user-name")
									.form-group.col-xs-6.col-sm-6
										label(for="begin-date") Check-in Date
										input.form-control(type="text", placeholder="Your name:", id="begin-date")
									.form-group.col-xs-6.col-sm-6
										label(for="end-date") Check-Out Date
										input.form-control(type="text", placeholder="Your name:", id="end-date")
									.col-md-9
										.row
											.form-group.col-xs-6.col-sm-3
												+select("room", "Rooms", [1,2,3])
											.form-group.col-xs-6.col-sm-3
												+select("adults", "Adults", [1,2,3])
											.form-group.col-xs-6.col-sm-3
												+select("children", "Children", [1,2,3])
											.form-group.col-xs-6.col-sm-3
												label(for="promotion-code") Pro Code
												input.form-control(type="text", placeholder="", id="promotion-code")
									.form-group.col-md-3
										button(type="submit").button.button-default SEARCH NOW

						#find-flights.tab-pane(role="tabpanel", style="background-image: url(images/bg-search-02.png)")
							p Book a Flights

						#find-flights-hotel.tab-pane(role="tabpanel", style="background-image: url(images/bg-search-03.png)")
							p Book a Flights

						#find-cars.tab-pane(role="tabpanel", style="background-image: url(images/bg-search-04.png)")
							p Book a Flights

						#find-cruises.tab-pane(role="tabpanel", style="background-image: url(images/bg-search-05.png)")
							p Book a Flights

			.row
				mixin introItem(number, title, text)
					.col-sm-4.col-md-4.process-item
						.icon-wrapper
							if(block)
								block
						strong.process-step= number
						h4: a(href="#")= title
						p= text || "This is Photoshop's version of Lorem Ipsum. Proin gravida nibh vel velit auctor aliquet. Aenean sollicitudin, lorem quis bibendum auctor."
