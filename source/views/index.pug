	// Start tour-section
	section.block.tour-block
		.container
			+title-block("Quick And Easy Search", "AWSOME TOUR")
			ul.filter-list
				mixin filterItem(icon, text)
					li&attributes(attributes)
						a(href="#") 
							i(class=icon)
							| #{text}
				+filterItem("fa fa-list", "All").active
				+filterItem("icon-people-1", "Honeymoon")
				+filterItem("icon-summer", "Holiday")
				+filterItem("icon-family-group-of-three", "Family")
				+filterItem("icon-diamond", "Luxury")
				+filterItem("icon-hiking", "Safari")
				+filterItem("icon-meditation", "Relax")
			
			+tourItem($imgBaseUrl + "blog-img1.jpg")
			+tourItem($imgBaseUrl + "blog-img2.jpg")
			+tourItem($imgBaseUrl + "blog-img3.jpg")
			.button-container
				a(href="#").button.button-default SEE ALL TOUR
	// End tour-section

	// Start feature-section
	section.feature-block
		mixin featureItem(imgUrl, icon, title, text)
			// Start feature-item
			figure.gallery__item&attributes(attributes)
				.gallery__content
					img(src=imgUrl, alt="")
					.overlay
						i(class=icon)
						h4= title
						p!= text || "This is Photoshop's version  of Lorem Ipsum. Proin gravida nibh "
						a(href="#").button.button-default See More
		.gallery__masonry
			.gallery__gutter
			.gallery__sizer
			+featureItem($imgBaseUrl + "location_tour_img1.jpg", "icon-beach", "Beahes & Islands")
			+featureItem($imgBaseUrl + "location_tour_img2.jpg", "icon-people-3", "Family Tours")
			+featureItem($imgBaseUrl + "location_center_img1.jpg", "icon-arrows", "See Our Latest Video").item--big
			+featureItem($imgBaseUrl + "location_tour_img3.jpg", "icon-beach-1", "HISTORY & CLUTURE")
			+featureItem($imgBaseUrl + "location_tour_img4.jpg", "icon-beach", "NATURE & WILDLIFE")
			+featureItem($imgBaseUrl + "location_tour_img5.jpg", "icon-transport-4", "ADVENTURE TOUR")
			+featureItem($imgBaseUrl + "location_tour_img6.jpg", "icon-sport", "FISHING TRIP")
			+featureItem($imgBaseUrl + "location_tour_img7.jpg", "icon-beach", "HONEYMOON TOUR")
			+featureItem($imgBaseUrl + "location_tour_img8.jpg", "icon-beach", "SEA KAYAKING")
	// End feature-section

	// Start trending-city-section
	section.block.trending-block.light-bg
		+title-block("Quick And Easy Search", "Top Trending Citys")
		.container
			ul.city-list
				mixin cityItem(imgUrl, title)
					li
						a.thumbnail-wrapper(href="javascript:void(0)"): img(src=imgUrl, alt="")
						h4= title
				each el, i in ["Australia", "London", "New York", "Copenhagen", "Amstedam", "Paris", "Los Angles", "Barcelona"]
					+cityItem(`${$imgBaseUrl}city-img0${i+1}.jpg`, el)
			.button-container
				a(href="#").button.button-orange GET A QOUTE
	// End trending-city-section

	// Start team-section
	section.block.team-block
		.container
			+title-block("MEET INTERESTING PEOPLE", "Meet Our Expert")
			.row
				.col-sm-4.col-md-3
					+teamItem2($imgBaseUrl + "expert-img01.jpg", "Karen J. Wheller")
				.col-sm-4.col-md-3
					+teamItem2($imgBaseUrl + "expert-img02.jpg", "Daniel M. Cherry")
				.col-sm-4.col-md-3
					+teamItem2($imgBaseUrl + "expert-img03.jpg", "Pamela B. Plose")
				.col-sm-4.col-md-3
					+teamItem2($imgBaseUrl + "expert-img04.jpg", "Jasica L. Deen")
	// End team-section
	
	+testimonial-block()

	+banner-block()
	
	// Start post-section
	section.block.post-block
		.container
			+title-block("MEET INTERESTING PEOPLE", "RELATED NEWS POST")

			.row
				+postItem-style2($imgBaseUrl + "placeholder/rala-post-img1.jpg", "", "", "")(class="col-sm-6 col-md-4")
				+postItem-style2($imgBaseUrl + "placeholder/rala-post-img2.jpg", "", "", "")(class="col-sm-6 col-md-4")
				+postItem-style2($imgBaseUrl + "placeholder/rala-post-img3.jpg", "", "", "")(class="col-sm-6 col-md-4")

	// End post-section
	
