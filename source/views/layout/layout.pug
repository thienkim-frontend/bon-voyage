include ../mixin/custom
//-variable
//- special character
	ampersand: &amp; / 	&#38;
	left parenthesis: &lpar; / &#40;
	right parenthesis: &rpar; / &#41;	
	commercial at: &commat; / &#64;
	no-break space: &nbsp;
	copyright sign: &copy;
	registered sign: &reg;
	superscript two: &sup2;
	fraction one-half: &frac12;
	multiply sign: &times;
	single left-pointing angle quotation mark: &lsaquo;
	leftwards arrow: &larr;
	less-than or equal to: &le;
//- FontAwesome
	i.fa.fa-facebook(aria-hidden="true")
	i.fa.fa-twitter
	i.fa.fa-google-plus
	i.fa.fa-linkedin
	i.fa.fa-instagram
	i.fa.fa-heart
	i.fa.fa-shopping-basket
	i.fa.fa-expand
	i.fa.fa-long-arrow-right
	i.fa.fa-user
	i.fa.fa-map-marker
	i.fa.fa-envelope
	i.fa.fa-phone
	i.fa.fa-arrow-circle-o-up
	fa-check
	fa-check-square-o
	fa fa-list
	fa-calendar-check-o
	fa-shopping-cart
	fa-bars
block var
- var $theme = "bv";
- var title = (typeof(title) === 'undefined' || title == "") ? "" : title;
- var $imgBaseUrl = "images/";
- var subPage = $theme + '-' + title.replace(/\s+/g, '-').toLowerCase();

doctype html
html(lang='en')
	block head
		head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(name="robots", content="index, follow")
			meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
			meta(name='apple-mobile-web-app-capable', content='yes')
			meta(name='format-detection', content='telephone=no')
			meta(name='description', content='')
			meta(name='keywords', content='')
			meta(name='author', content='')
			//- base(href="/")
			link(rel='icon', href='./images/common/favicon.ico' type='image/x-icon')    
			title Title | #{title}
			// link(rel="canonical", href="#")
