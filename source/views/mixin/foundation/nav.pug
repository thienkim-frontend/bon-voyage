mixin menu
	ul&attributes(attributes)
		each val in ["One", "Two", "Three", "Four"]
			li: a(href="#") <i class="fi-list"></i> #{val}
//- li.is-active: a(href="#") Active
+menu().menu.align-center
+menu().menu.expanded
+menu().menu.vertical.medium-horizontal

//- data-submenu-toggle="true" allows the parent item to have its own link, but still allows the submenu to be opened/closed
	var elem = new Foundation.AccordionMenu(element, options);

ul.vertical.menu.accordion-menu(data-accordion-menu, data-submenu-toggle="true")
	li 
		a(href="http://foundation.zurb.com/") Zurb Foundation
		+menu().menu.vertical.nested    
	li: a(href="#") Item 1A
	
//- var elem = new Foundation.Drilldown(element, options);
ul.vertical.menu.drilldown(data-drilldown, data-auto-height="true", data-animate-height="true", data-scroll-top="true")
	li 
		a(href="#") Item 1A
		+menu().menu.vertical.nested    
	li: a(href="#") Item 1A

//- var elem = new Foundation.DropdownMenu(element, options);
ul.vertical.menu.dropdown(data-dropdown-menu)
	li 
		a(href="#") Item 1A
		+menu().menu.vertical.nested    
	li: a(href="#") Item 1A

//- var elem = new Foundation.ResponsiveMenu(element, options);
.title-bar(data-responsive-toggle="responsive-menu", data-hide-for="medium")
	button.menu-icon(type="button", data-toggle="responsive-menu")
	.title-bar-title Menu

#responsive-menu.top-bar.stacked-for-medium(data-animate="hinge-in-from-top spin-out")
  .top-bar-left
	ul.vertical.medium-horizontal.menu(data-responsive-menu="drilldown medium-dropdown")
	  li.menu-text Site Title
	  li.has-submenu
		a(href="#") One
		ul.menu.vertical.submenu(data-submenu)
		  li
			a(href="#") One
	  li
		a(href="#") Two
  .top-bar-right
	ul.menu
	  li
		input(type="search", placeholder="Search")
	  li
		button.button(type="button") Search

