// Add a Sticky Menu
div(data-sticky-container)
	#example-menu.top-bar(data-sticky, data-margin-top="0")
		.top-bar-left
			ul.menu
				li.menu-text Site Title
		.top-bar-right
			ul.menu(data-magellan)
				li: a(href="#first") One
				li: a(href="#second") Two
				li: a(href="#third") Three

// sticky sidebar
.cell.large-3
	nav.sticky-container(data-sticky-container)
		.sticky(data-sticky, data-anchor="exampleId", data-sticky-on="large")
			ul.vertical.menu(data-magellan)
				li: a(href="#first") First Arrival
				li: a(href="#second") Second Arrival
				li: a(href="#third") Third Arrival

